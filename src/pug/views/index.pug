extends ../templates/_root

prepend head
  - const path = '/'
  - const type = 'website'
  - const title = 'Hello World'
  - const description = 'A template for Pug and more.'
  - const image = '/og.png'
  - const alt = 'My OpenGraph image'
  - const card = 'summary_large_image'
  
append head
  script(type='application/ld+json')
    include ../../json/index.min.json

append body
  main
    header
      h1 Hello World
    p This is the example page of the #[a(href='https://github.com/sposhe/gulp-pug-rig') #[code gulp-pug-rig]] template. For more information, consult the #[a(href='https://github.com/sposhe/gulp-pug-rig') README].
